// Prisma Schema for StrategyOS
// Phase 17: Team Collaboration & Cloud Persistence

generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
}

// --- AUTHENTICATION (NextAuth) ---

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- USERS & TEAMS ---

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  role          Role       @default(MEMBER)
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  strategies    Strategy[]
  team          Team?      @relation(fields: [teamId], references: [id])
  teamId        String?
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Team {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  logo        String?
  
  // Relations
  members     User[]
  strategies  Strategy[]
  resources   Resource[]
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum Role {
  ADMIN
  EDITOR
  MEMBER
  VIEWER
}

// --- STRATEGIES ---

model Strategy {
  id          String       @id @default(cuid())
  content     String
  title       String?
  platform    Platform     @default(LINKEDIN)
  persona     String       @default("cso")
  
  // Phase 24: Data Intelligence Layer
  input       String       @default("")
  assets      String       @default("{}") // JSON: GeneratedAssets
  rating      String?      // "viral", "good", "meh", "flopped"
  
  // Performance
  score       Int?
  impressions Int?
  engagement  Float?
  saves       Int?         @default(0)
  shares      Int?         @default(0)
  reach       Int?         @default(0)
  dwellScore  Float?       @default(0.0)
  
  // Metadata
  mode        String?      // "standard", "agentic", "swarm"
  isPublished Boolean      @default(false)
  publishedAt DateTime?
  externalId  String?      // LinkedIn/Twitter post ID

  // Team Analytics (Phase 26)
  isTeamPost     Boolean   @default(false)
  teamMemberName String?
  teamMemberRole String?
  
  // Relations
  author      User         @relation(fields: [authorId], references: [id])
  authorId    String
  team        Team?        @relation(fields: [teamId], references: [id])
  teamId      String?
  versions    StrategyVersion[]
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model StrategyVersion {
  id          String   @id @default(cuid())
  content     String
  version     Int
  changeNote  String?
  
  strategy    Strategy @relation(fields: [strategyId], references: [id], onDelete: Cascade)
  strategyId  String
  
  createdAt   DateTime @default(now())
}

enum Platform {
  LINKEDIN
  TWITTER
  BOTH
}

// --- VOICE DNA ---

model VoiceModel {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // Training data (JSON stringified)
  examples    String
  styleNotes  String?
  
  // Owner
  userId      String   @unique
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- AUDIT LOG ---

model AuditLog {
  id          String   @id @default(cuid())
  action      String   // "generation_started", "strategy_published", etc.
  actor       String?  // User email or "system"
  metadata    Json?
  
  createdAt   DateTime @default(now())
}

// --- RESOURCES (Phase 19) ---

model Resource {
  id          String   @id @default(cuid())
  title       String
  type        String   // "pdf", "image", "web"
  url         String   // Local path or cloud URL
  metadata    Json?    // Stores extracted data (sender, date, summary)
  
  // Relations
  team        Team?    @relation(fields: [teamId], references: [id])
  teamId      String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
